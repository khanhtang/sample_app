<% provide :title, t("edit_user") %>
<% provide :button_text, t("change") %>
<h1><%= t "update_your_profile" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render "form" %>
    <% end %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("change"), Settings.link_avatar , target: :_blank %>
    </div>
  </div>
</div>
